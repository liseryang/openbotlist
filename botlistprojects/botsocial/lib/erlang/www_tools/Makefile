#**********************************************
# Makefile
# 2/2/2008
#**********************************************

.SUFFIXES: .erl .beam .yrl

ERLC = erl -boot start_bit

#**********************************************
# All target
#**********************************************
all: compile

#**********************************************
# erl files
#**********************************************

.erl.beam:
	erlc -W $<
	
.yrl.erl:
	erlc -W $<

#**********************************************
# set of modules
#**********************************************
MOD_OBJS = disk_cache html_tokenise html_analyse html_expand	\
	url url_parse url_copy

SUB_DIRS:
	
#**********************************************
# compile target
#**********************************************
compile: ${MOD_OBJS:%=%.beam} SUB_DIRS

#**********************************************
# Clean
#**********************************************
clean:
	rm -rf *.beam erl_crash.dump	
	